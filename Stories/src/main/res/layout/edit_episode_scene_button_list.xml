<?xml version="1.0" encoding="utf-8"?>
<com.darakeon.stories.views.SceneButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/scene_button">

    <ImageView
        android:id="@+id/scene_button_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/puzzle"
        android:gravity="center" />

    <TextView
        android:id="@+id/scene_button_letter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowRadius="6" />

</com.darakeon.stories.views.SceneButton>