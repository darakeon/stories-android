<?xml version="1.0" encoding="utf-8"?>
<com.darakeon.stories.views.ParagraphView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.darakeon.stories.views.ParagraphImage
        android:id="@+id/type"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@android:drawable/stat_notify_voicemail" />

    <ListView
        android:id="@+id/piece_list"
        android:layout_width="0dp"
        android:layout_weight="17"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants" />

    <com.darakeon.stories.views.AutoComplete
        android:id="@+id/character"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"/>

</com.darakeon.stories.views.ParagraphView>