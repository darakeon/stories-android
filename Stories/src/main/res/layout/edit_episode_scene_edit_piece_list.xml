<?xml version="1.0" encoding="utf-8"?>
<com.darakeon.stories.views.PieceView xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

    <com.darakeon.stories.views.AutoComplete
        android:id="@+id/scene_edit_piece_list_type"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:nextFocusRight="@+id/scene_edit_piece_list_text" />

    <com.darakeon.stories.views.MultilineWithNext
        android:id="@+id/scene_edit_piece_list_text"
        android:layout_width="0dp"
        android:layout_weight="24"
        android:layout_height="wrap_content"
        android:nextFocusLeft="@+id/scene_edit_piece_list_type"
        android:inputType="textCapSentences|textMultiLine" />

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:src="@drawable/plus" />

</com.darakeon.stories.views.PieceView>